<%- include('partials/header_b5'); -%>
<div class="contact-form">
  <form action="/contact" method="post">
    <h1 style="padding-left: 100px; padding-bottom: 30px;">Contact us</h1>
    <div class="mb-3">
     <label for="Name" class="form-label">Name<span class="required-label">*</span></label>
     <input type="text" class="form-control" name="Name" required>
    </div>
    <div class="mb-3">
     <label for="Email" class="form-label">Email<span class="required-label">*</span></label>
     <input type="email" class="form-control" name="Email" required>
    </div>
    <div class="mb-3">
     <label for="Phone" class="form-label">Phone<span class="required-label">*</span></label>
     <input type="tel" class="form-control" name="Phone" pattern="[0-9]{10}" required>
    </div>
    <div class="mb-3">
     <label for="Subject" class="form-label">Subject</label>
     <input type="text" class="form-control" name="subject">
    </div>
    <div class="mb-3">
     <label for="Comment" class="form-label">Comment or Message</label>
     <textarea class="form-control" name="Comment" rows="3"></textarea>
    </div>
    <button class="w-100 btn btn-lg btn-primary" type="submit">Submit</button>
  </form>
</div>
<%-include('partials/footer');  -%>
